@page
@model DataBaseMs3.Pages.Admin.AdminLinkStudentToCourseModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Admin Link Student to Course</h1>








<form method="post">
    <input type="number" name="cours_id" placeholder="Course ID" required />
    <input type="number" name="instructor_id" placeholder="Instructor ID" required />
    <input type="number" name="studentID" placeholder="Student ID" required />
    <input type="text" name="semester_code" placeholder="Semester Code" required />
    <button>  Link  </button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}

<script>
    document.getElementById('submitButton').addEventListener('click', function (event) {
        event.preventDefault();
    }
</script>